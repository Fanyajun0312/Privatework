<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WodeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/bg_me_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@drawable/shape" />

        <TextView
            android:id="@+id/tv_reg_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_name"
            android:text="登录/注册"
            android:textColor="@color/wark"
            android:textSize="@dimen/dp_15"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        app:layout_constraintTop_toBottomOf="@id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_wait_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_order_wait_pay"
            android:gravity="center_horizontal"
            android:text="待付款" />
        <TextView
            android:id="@+id/tv_wait_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_order_wait_confirm"
            android:gravity="center_horizontal"
            android:text="待收货" />

        <TextView
            android:id="@+id/tv_order_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_order_completed"
            android:gravity="center_horizontal"
            android:text="已完成" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_order"
            android:gravity="center_horizontal"
            android:text="我的订单" />
    </LinearLayout>

    <View
        android:id="@+id/vl"
        app:layout_constraintTop_toBottomOf="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/common_gray" />

    <RelativeLayout
        android:id="@+id/ll_message"
        app:layout_constraintTop_toBottomOf="@+id/vl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <ImageView
            android:id="@+id/iv_img_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_trumpet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/iv_img_message"
            android:text="收获管理"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_trumpet" />
    </RelativeLayout>

    <View
        android:id="@+id/vp_she"
        app:layout_constraintTop_toBottomOf="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_gray" />

    <RelativeLayout
        android:id="@+id/ll_she"
        app:layout_constraintTop_toBottomOf="@+id/vp_fen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <ImageView
            android:id="@+id/vp_she"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/zhuan"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/vp_she"
            android:text="分享"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_she"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_trumpet" />
    </RelativeLayout>
    <View
        android:id="@+id/vp_fen"
        app:layout_constraintTop_toBottomOf="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_gray" />

    <RelativeLayout
        android:id="@+id/ll_fen"
        app:layout_constraintTop_toBottomOf="@+id/vp_fen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <ImageView
            android:id="@+id/vp_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/zhuan"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/vp_fen"
            android:text="分享"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_trumpet" />
    </RelativeLayout>




    <View
        android:id="@+id/vp_zhuan"
        app:layout_constraintTop_toBottomOf="@+id/ll_fen"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_gray" />

    <RelativeLayout
        android:id="@+id/ll_zhuan"
        app:layout_constraintTop_toBottomOf="@+id/vp_zhuan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <ImageView
            android:id="@+id/vp_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/she"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/vp_fen"
            android:text="设置"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_zhaun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_trumpet" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>